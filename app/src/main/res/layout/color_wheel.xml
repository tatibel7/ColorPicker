<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".ColorWheel"> <!-- child views displayed in column -->

    <!--android:src sets drawable (image) as content of ImageView -->

    <!-- this view will display the color values extracted from color wheel. -->

    <ImageView
        android:id="@+id/colorPicker"
        android:layout_width="match_parent"
        android:layout_height="334dp"
        android:padding="20dp"
        android:src="@drawable/regularwheel" />

    <TextView
        android:id="@+id/displayValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:text="Hex: \nRGB"
        android:textSize="24sp" />
    <!-- gravity specifies how component should be placed in group of cells. -->

    <!-- this view will display the color extracted from colorwheel -->
    <View
        android:id="@+id/displayColor"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>